<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerId"
    tools:openDrawer="start"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E4E3E3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:weightSum="5"
                android:paddingTop="10dp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="0dp">
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="8dp"
                    android:id="@+id/search_card_id"
                    android:layout_width="0dp"
                    android:layout_weight="2.2"
                    android:layout_margin="3dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/search_icon"/>
                        <TextView
                            android:id="@+id/search_title"
                            android:paddingTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Search!"
                            android:gravity="center_horizontal"
                            android:textColor="#000000"
                            android:fontFamily="@font/archistico_bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="8dp"
                    android:id="@+id/batch_13_card_id"
                    android:layout_width="0dp"
                    android:clickable="true"
                    android:layout_margin="3dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_weight="2.2"
                    android:layout_height="match_parent">
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView

                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/school_icon"/>
                        <TextView
                            android:id="@+id/batch_13_title"
                            android:paddingTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="20sp"
                            android:text="13th Batch"
                            android:fontFamily="@font/archistico_bold"
                            android:gravity="center_horizontal"
                            android:textColor="#000000"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:weightSum="5"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="0dp">
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="8dp"
                    android:id="@+id/batch_14_card_id"
                    android:layout_width="0dp"
                    android:layout_weight="2.2"
                    android:layout_margin="3dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/school_icon"/>

                        <TextView
                            android:id="@+id/batch_14_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:paddingTop="8dp"
                            android:text="14th Batch"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/archistico_bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="8dp"
                    android:id="@+id/batch_15_card_id"
                    android:layout_width="0dp"
                    android:clickable="true"
                    android:layout_margin="3dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_weight="2.2"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/school_icon"/>
                        <TextView
                            android:id="@+id/batch_15_title"
                            android:paddingTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="20sp"
                            android:text="15th Batch"
                            android:gravity="center_horizontal"
                            android:textColor="#000000"
                            android:fontFamily="@font/archistico_bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:weightSum="5"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="0dp">
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="8dp"
                    android:id="@+id/batch_16_card_id"
                    android:layout_width="0dp"
                    android:layout_weight="2.2"
                    android:layout_margin="3dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/school_icon"/>
                        <TextView
                            android:id="@+id/batch_16_title"
                            android:paddingTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="16th Batch"
                            android:gravity="center_horizontal"
                            android:textColor="#000000"
                            android:fontFamily="@font/archistico_bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="8dp"
                    android:id="@+id/batch_17_card_id"
                    android:layout_width="0dp"
                    android:clickable="true"
                    android:layout_margin="3dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_weight="2.2"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/school_icon"/>
                        <TextView
                            android:id="@+id/batch_17_title"
                            android:paddingTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="20sp"
                            android:text="17th Batch"
                            android:gravity="center_horizontal"
                            android:textColor="#000000"
                            android:fontFamily="@font/archistico_bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:weightSum="5"
                android:layout_marginBottom="10dp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="0dp">
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="8dp"
                    android:id="@+id/batch_18_card_id"
                    android:layout_width="0dp"
                    android:layout_weight="2.2"
                    android:layout_margin="3dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/school_icon"/>
                        <TextView
                            android:id="@+id/batch_18_title"
                            android:paddingTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="18th Batch"
                            android:gravity="center_horizontal"
                            android:textColor="#000000"
                            android:fontFamily="@font/archistico_bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="8dp"
                    android:id="@+id/batch_19_card_id"
                    android:layout_width="0dp"
                    android:clickable="true"
                    android:layout_margin="3dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_weight="2.2"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/school_icon"/>
                        <TextView
                            android:id="@+id/batch_19_title"
                            android:paddingTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="20sp"
                            android:text="19th Batch"
                            android:gravity="center_horizontal"
                            android:textColor="#000000"
                            android:fontFamily="@font/archistico_bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:id="@+id/navigationId"
        android:layout_height="match_parent"
        android:background="#F7F2F2"
        app:itemTextColor="#272121"
        app:menu="@menu/menu_nav_home"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_home"
        >
    </com.google.android.material.navigation.NavigationView>






</androidx.drawerlayout.widget.DrawerLayout>


